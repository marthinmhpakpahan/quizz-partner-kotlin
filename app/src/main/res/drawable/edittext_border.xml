<!-- res/drawable/edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFFFFF" /> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border color -->
    <corners android:radius="16dp" /> <!-- Rounded corners (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>