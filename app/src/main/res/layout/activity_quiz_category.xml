<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvJudulKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Kategori Kuis"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Card-style buttons for each category -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPerjanjianLama"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:textSize="18dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:tag="perjanjian_lama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“– Perjanjian Lama"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPerjanjianBaru"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:textSize="18dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:tag="perjanjian_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“– Perjanjian Baru"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTokohAlkitab"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:textSize="18dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:tag="tokoh_alkitab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§ Tokoh Alkitab"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAyatPenting"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:textSize="18dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:tag="ayat_penting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”‘ Ayat Penting"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKuisAcak"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:textSize="18dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:tag="kuis_acak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ² Kuis Acak"
            android:layout_marginBottom="8dp" />

        <!-- Optional: Slider or Spinner for jumlah soal -->
        <TextView
            android:id="@+id/tvJumlahSoal"
            android:paddingVertical="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Soal: 10"
            android:layout_marginTop="20dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="1">
            <com.google.android.material.button.MaterialButton
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="10"
                app:cornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btnJumlah10" />
            <com.google.android.material.button.MaterialButton
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="20"
                app:cornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btnJumlah20" />
            <com.google.android.material.button.MaterialButton
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="30"
                app:cornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btnJumlah30" />
            <com.google.android.material.button.MaterialButton
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="40"
                app:cornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btnJumlah40" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:textSize="18dp"
            app:cornerRadius="14dp"
            android:text="Mulai Kuis"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
